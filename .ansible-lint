---
# vim: ft=yaml

offline: true
use_default_rules: true

exclude_paths:
  - plugins
  - roles/installer  # will go through, eventually
  - roles/node_prep  # will go through, eventually
  - roles/upi_installer  # using vars_file in role makes linter mad
  - roles/verify_tests  # junitparser is a headache

skip_list:
  - yaml[line-length]
  - yaml[new-line-at-end-of-file]

warn_list:
  - ignore-errors
  - no-changed-when
...
